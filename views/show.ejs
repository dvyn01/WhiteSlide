<% include partials/header %>

<style>
    body {
        background: white;
    }

    html {
        background: white;
    }

    .navbar {
        background: rgb(243, 242, 241);
    }

    input[type="text"],
    textarea {
        background-color: rgb(243, 242, 241);
    }
</style>
<script type="text/javascript" src="./js/client.js"> </script>

<span id="room" hidden>
    <%= id %>
</span>
<div>
    <canvas id="drawing"></canvas>
</div>
<button id="pen">Pen</button>
<button id="eraser">Eraser</button>

<hr>
<div>
    <% if(currentUser) { %>
    <form action="/user/rooms/new" method="POST">
        <div>
            <input type="text" name="roomId" value="<%=id%>" hidden>
        </div>
        <div>
            <input type="text" class="form-control" name="roomName" placeholder="Enter a short name for the room!"
                required>
        </div>
        <button class="btn btn-primary">
            Save
        </button>
    </form>
    <% } %>
</div>

<% include partials/footer %>